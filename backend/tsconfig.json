{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    // Environment Settings
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    // Other Outputs
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "prisma",
    "dist"
  ]
}